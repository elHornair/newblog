<!DOCTYPE html>
<html lang="de">
<head>
    {% block head %}
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1">

        <title>{% if header.title %}{{ header.title }} | {% endif %}{{ site.title }}</title>

        {% if header.description %}
            <meta name="description" content="{{ header.description }}">
        {% else %}
            <meta name="description" content="{{ site.description }}">
        {% endif %}

        {% if header.robots %}
            <meta name="robots" content="{{ header.robots }}">
        {% endif %}

        <link rel="shortcut icon" href="{{ theme_url }}/images/favicon.ico" type="image/x-icon">
        <link rel="icon" href="{{ theme_url }}/images/favicon.ico" type="image/x-icon">

        {# Google Analytics #}
        <script>
            (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
                        (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
                    m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
            })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

            ga('create', 'UA-50156206-1', 'alainhorner.ch');
            ga('send', 'pageview');
        </script>

        {% block stylesheets %}
            {% do assets.add('theme://css/pure-min.css', 101) %}
            {% do assets.add('theme://css/icons.css', 101) %}
            {% do assets.add('theme://css/main.css', 100) %}
            {{ assets.css() }}
        {% endblock %}

        {% block head_scripts %}
        {% endblock %}
    {% endblock head %}
</head>

<body>
    {% include 'partials/header.html.twig' %}

    <section id="content">
        {% block content %}
            <article class="post">
                <h1>{{ page.title }}</h1>
                {{ page.content }}
            </article>
        {% endblock %}
    </section>

    <footer id="footer">
        <div class="footer-inner">
            <ul class="social">
                <li class="icon-twitter"><span class="social-item">Folge mir auf <a href="https://twitter.com/hornairTravels">Twitter</a></span></li>
                <li class="icon-instagram"><span class="social-item">Folge mir auf <a href="https://www.instagram.com/thetravelsofhornair/">Instagram</a></span></li>
                <li class="icon-facebook"><span class="social-item">Werde mein Freund auf <a href="https://www.facebook.com/TheTravelsOfHornair/">Facebook</a></span></li>
            </ul>
        </div>
    </footer>

    {% block javascripts %}
        {% do assets.add('theme://js/jquery-1.12.0.min.js') %}
        {% do assets.add('theme://js/bootstrap.min.js') %}
        {{ assets.js() }}
    {% endblock %}

    {% block bottom_scripts %}
    {% endblock %}
</body>
</html>
